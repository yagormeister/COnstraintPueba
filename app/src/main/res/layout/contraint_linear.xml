<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/barra_superior"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:background="@color/teal_200"
        android:id="@+id/barra_laterañ_izquierda"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/barra_superior"
        app:layout_constraintStart_toStartOf="parent"

        />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="216dp" />

    <AnalogClock
        android:id="@+id/reloj"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/barra_superior"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />


        <View
            android:background="#FF5252"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_a"
        app:layout_constraintTop_toBottomOf="@id/guia_horizontal"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#FF4081"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_b"
        app:layout_constraintTop_toBottomOf="@id/elemento_a"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#E040FB"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_c"
        app:layout_constraintTop_toBottomOf="@id/elemento_b"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#7C4DFF"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_d"
        app:layout_constraintTop_toBottomOf="@id/elemento_c"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#536DFE"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_e"
        app:layout_constraintTop_toBottomOf="@id/elemento_d"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#18FFFF"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_f"
        app:layout_constraintTop_toBottomOf="@id/elemento_e"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#EEFF41"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_g"
        app:layout_constraintTop_toBottomOf="@id/elemento_f"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#FFAB40"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_h"
        app:layout_constraintTop_toBottomOf="@id/elemento_g"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:background="#FF6E40"

        android:layout_width="0dp"
        android:layout_height="70dp"
        android:id="@+id/elemento_i"
        app:layout_constraintTop_toBottomOf="@id/elemento_h"
        app:layout_constraintStart_toEndOf="@id/barra_laterañ_izquierda"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>
